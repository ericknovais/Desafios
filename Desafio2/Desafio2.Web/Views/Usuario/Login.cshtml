@model Desafio2.Web.ViewModel.LoginViewModel

@{
    Layout = null;
    if (TempData["Alerta"] != null)
    {
        @Html.Partial("../Modal/Alerta")
    }
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $("#btnModalErro").click();
        });
    </script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">
                                        Login
                                    </h3>
                                </div>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <form>
                                        <div class="card-body">
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "small mb-1" })
                                                    <div class="form-group">
                                                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Informe seu login" } })
                                                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "small mb-1" })
                                                    <div class="form-group">
                                                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Informe sua senha" } })
                                                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small" href="@Url.Action("Cadastro", "Usuario")">Criar Conta</a>
                                                <input type="submit" value="Logar" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
  
</body>
</html>