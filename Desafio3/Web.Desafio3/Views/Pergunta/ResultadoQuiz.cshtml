@model Desafio3.AppWeb.ViewModels.ResultadoQuizViewModel

@{
    ViewBag.Title = "ResultadoQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var percentual = (((double)Model.Acerto / Model.QtdPerguntas) * 100);
    var estilo = "bg-danger";
    var texto = "Mais atenção as perguntas";
    if ((percentual >= 50) && (percentual <= 74))
    {
        estilo = "";
        texto = "Muito bom";
    }
    if (percentual >= 75)
    {
        estilo = "bg-success";
        texto = "Parabéns";
    }

}

<div id="layoutSidenav_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header">
                            <h3 class="text-center font-weight-light my-4">
                                Resultado
                            </h3>
                        </div>
                        <div class="card-body">
                            <h4 class="text-center font-weight-light my-4">
                                @texto
                            </h4>
                            <div class="progress">
                                <div class="progress-bar @estilo" role="progressbar" style="width: @Convert.ToInt32(percentual)%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">@percentual.ToString("F2")%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>